<!DOCTYPE html>
<html lang="en" class="wf-proximanova-n1-active wf-proximanova-n4-active wf-proximanova-n7-active wf-omnespro-n2-active wf-omnespro-n3-active wf-active">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link rel="stylesheet" href="@Url.Content("~/Content/mng.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/purecss/pure-min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Scripts/Library/timePicker/timePicker.css")" />
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
    @RenderSection("css", false)
    <style type="text/css">
        .field-validation-error {
            color: rgb(223, 117, 20);
        }

        .message {
            color: red;
        }

        select {
            height: auto;
        }

            select:disabled {
                color: white;
            }

        input[type=text].datetime {
            width: 65px;
        }

        .pure-menu-selected {
            background: #eee;
        }

        .pure-menu-heading {
            color: #ffffff;
            background-color: #dfdfdf;
        }

        textarea {
            height: 160px;
        }

        .pure-menu-heading {
            width: 89%;
            margin-left: -10px;
        }

        .pure-menu .pure-menu-selected a {
            color: white;
            background: #5eb95e;
        }

        .pure-form-aligned .pure-control-group label {
            vertical-align: top;
        }

        .pure-menu li a:hover, .pure-menu li a:focus {
            color: gray;
        }
    </style>

    <script src="https://code.jquery.com/jquery-3.6.1.min.js" type="text/javascript"></script>
    @*測試新版jquery (datepicker)用@Url.Content("~/Scripts/jquery-2.1.4.min.js")*@
    @*<script type="text/javascript" src="http://code.jquery.com/jquery-1.9.1.js"></script>*@




    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ckeditor/ckeditor.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ckeditor/ckfinder/ckfinder.js")" type="text/javascript"></script>
    <script type="text/javascript">
        var myCkeditor = {};
        myCkeditor.config = {
            skin: 'kama', width: '100%',
            filebrowserBrowseUrl: '@Url.Content("~/Scripts/ckeditor/ckfinder/ckfinder.html")',
            filebrowserImageBrowseUrl: '@Url.Content("~/Scripts/ckeditor/ckfinder/ckfinder.html?type=Images")',
            filebrowserFlashBrowseUrl: '@Url.Content("~/Scripts/ckeditor/ckfinder/ckfinder.html?type=Flash")',
            filebrowserUploadUrl: '@Url.Content("~/Scripts/ckeditor/ckfinder/core/connector/aspx/connector.aspx?command=QuickUpload&type=Files")',
            filebrowserImageUploadUrl: '@Url.Content("~/Scripts/ckeditor/ckfinder/core/connector/aspx/connector.aspx?command=QuickUpload&type=Images")',
            filebrowserFlashUploadUrl: '@Url.Content("~/Scripts/ckeditor/ckfinder/core/connector/aspx/connector.aspx?command=QuickUpload&type=Flash")'

        };
    </script>

    @*<script src="@Url.Content("~/Scripts/knockout-2.3.0.js")" type="text/javascript"></script>*@
    <script type="text/javascript" src="@Url.Content("~/Scripts/Library/timePicker/jquery.timePicker.js")"></script>
    @* jquery ui *@
    <script type="text/javascript" src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>

    @RenderSection("js", false)

    <script type="text/javascript">
        function deleteAll(sender, args) {
            if (confirm('確定刪除?')) {
                $.ajax({
                    url: '@Url.Action("Delete")',
                    type: "POST",
                    data: { "id": args.id },
                    dataType: "html",
                    success: function (data) {
                        window.location.href = "/" + args.FunctionName + "/list";
                    }
                });
            }
        }
    </script>

</head>

<body>
    <div id="wrap">
        <div id="top" style="height:45px;">
            <div id="logo">
                @*                <img src="@Url.Content("~/Content/Images/logo.jpg")" alt="HTC">*@
            </div>
            <div id="common">
                @*                @Html.ActionLink("帳戶資訊", "Index", "Home") │ *@
                @*@Html.ActionLink("變更密碼", "Info", "Account") │*@ <a href="@Url.Content("~/Account/Signout")">登出</a>
            </div>
        </div>
        <div id="left">
            <div id="navigation">
                <div>
                    <img src="@Url.Content("~/Content/Images/left_menu_top.gif")">
                </div>
                <div class="pure-menu pure-menu-open" style="border:0px; margin:2px; width:98%">
                    @Html.MvcSiteMap().Menu()
                </div>
                <div>
                    <img src="@Url.Content("~/Content/Images/left_menu_bottom.gif")">
                </div>
            </div>
        </div>
        <div id="main">
            <div class="secondaryMenu">
                @*                <h1 class="float">
                    <img src="@Url.Content("~/Content/Images/title_info.gif")" alt="帳戶資訊"></h1>*@
            </div>
            <div id="content">
                @Html.MvcSiteMap().SiteMapPath()
                @*                <div class="editArea">*@
                <p></p>
                <div class="">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <div id="footer">
        <div id="copyright">© 2015 Corporation All Right Reserved @typeof(JamZoo.Project.WebSite.Controllers.AccountController).Assembly.GetName().Version.ToString(3)rc</div>
    </div>

    @*<script type="text/javascript" src="http://purecss.io/combo/1.3.12?/js/ui.js&/vendor/rainbow/rainbow-min.js"></script>*@
</body>
</html>
