<style>

    .pr-md-4, .px-md-4 {
    padding-right: 1.5rem!important;
}
.content-inner ul li a {
    padding: 102.5px 20px;
    background: white;
    border: 1px solid #72A418;
    border-radius: 5px;
    align-items: center;
    cursor: pointer;
   
    transition: background .3s,box-shadow .3s;
}
.content-inner  ul {
    flex-wrap: wrap;
   
}

i.icon-right-open::before {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    margin: 0;
    -webkit-transition: color .3s;
    transition: color .3s;
}
.content-inner ul li a h3 {
    transition: color 0s;
    color: #FFF;
    margin-bottom: 0;
}
.content-inner ul li a i:nth-of-type(2) {
    font-size: 25px;
    color: #72A418;
    background: #E3EDD1;
    border-radius: 50%;
    height: 37.5px;
    width: 37.5px;
    margin-right: 0;
    transition: color .3s,background .3s;
}
.icon-right-open:before {
    content: '>';
}
i.icon-right-open {
    display: inline-block;
    color: #1E1E1E;
    font-size: 12px;
    margin-right: 10px;
    border-radius: 50%;
    width: 14px;
    height: 14px;
    position: relative;
    -webkit-transition: background .3s;
    transition: background .3s;
}

h3{
    text-align:center;
}
.date_l{
    width:100%;
    display:block !important;

}
.date_l .datebox {
    float:right;
    padding-right:0.7em;
  
}

    [class^="icon-"]:before, [class*=" icon-"]:before {
        font-family: "fontello";
        font-style: normal;
        font-weight: normal;
        speak: none;
        display: inline-block;
        text-decoration: inherit;
        width: 1em;
